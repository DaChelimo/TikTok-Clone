<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/small_tag_layout"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_100sdp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/small_tag_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/video_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@color/colorAccent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading_spinner"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:indeterminate="true"
        app:indicatorColor="@color/pinkBtnBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/medium_grey" />
</androidx.constraintlayout.widget.ConstraintLayout>